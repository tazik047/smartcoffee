@model IEnumerable<SmartQueue.Web.Models.NotActiveCompanyViewModel>

@{
    ViewBag.Title = "Активация компаний";
}

<h2>Активация компаний</h2>

@if (!Model.Any())
{
    <div>Нет неактивированных компаний</div>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.ActionLink("Активировать", "ActivateConcreteCompany", new {id = item.Id})
                </td>
            </tr>
        }

    </table>
}

@section Scripts{
    @if (TempData.ContainsKey("Activated"))
    {
        @TempData.Remove("Activated")
        <script>
            swal("Компания успешно активирована", "", "success");
        </script>
    }
}
